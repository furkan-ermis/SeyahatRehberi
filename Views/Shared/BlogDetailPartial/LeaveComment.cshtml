@using SeyahatRehberi.ViewModel
@model CommentViewModel
@using (Html.BeginForm("PostComment", "Travel", FormMethod.Post, new { blogId =@Model.BlogId }))
{
    <div class="leave-comment-form mt-5" id="reply">
        <input type="hidden" name="BlogId" id="BlogId" value="@Model.BlogId" />
        <h4 class="side-title mb-2">Leave a Reply</h4>
            <div class="form-group">
                <textarea name="Comment" id="Comment" class="form-control" placeholder="Your Comment*" required=""
                          spellcheck="false"></textarea>
            </div>

            <div class="submit text-right">
                <button type="submit" class="btn btn-style btn-primary">Post Comment </button>
            </div>
    </div>
}