@using SeyahatRehberi.ViewModel
@model List<PopulerCitiesViewModel>
<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-12 mt-lg-0 ">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        
                        <a href="@Url.Action("BlogList", "Travel", new {item.CityId })" class="maghny-gd-1 col-4 mt-4" )">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img style="height:160px" class="img-fluid" src="@item.Image" alt="" />
                                    <figcaption style="bottom:80px">
                                        <div>
                                            <span>Blog Sayısı: @item.BlogCount</span>
                                            <h2 class="text-warning">@item.CityName</h2>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        </a>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
